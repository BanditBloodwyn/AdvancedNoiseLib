            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        <Image Grid.Row="1" x:Name="img_Preview" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
